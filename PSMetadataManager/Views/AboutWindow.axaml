<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PSMetadataManager.Views"
        x:Class="PSMetadataManager.Views.AboutWindow"
        x:DataType="views:AboutWindow"
        WindowStartupLocation="CenterOwner"
        Width="300" Height="120"
        CanResize="False"
        Title="About PSMetadataManager">
    
    <DockPanel>
        <TextBlock
            DockPanel.Dock="Top"
            Margin="10"
            FontWeight="Bold"
            FontSize="24"
            HorizontalAlignment="Center">
            PSMetadataManager
        </TextBlock>
        <!-- <StackPanel -->
        <!--     DockPanel.Dock="Bottom" -->
        <!--     Orientation="Horizontal" -->
        <!--     HorizontalAlignment="Right" -->
        <!--     Margin="10"> -->
        <!--     <Button -->
        <!--         Command="{Binding CloseWindow}">Close</Button> -->
        <!-- </StackPanel> -->
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center">version 0.0.0</TextBlock>
            <TextBlock
                HorizontalAlignment="Center">
                PSMetadataLib version 0.0.0
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Center">
                <InlineUIContainer><HyperlinkButton 
                                       Padding="0"
                                       Command="{Binding OpenSourceCodeCommand}">Source code</HyperlinkButton></InlineUIContainer>, licensed under MIT.
            </TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
